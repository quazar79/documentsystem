<Window x:Class="DocumentSystem.RenameDocumentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переименовать документ" Height="150" Width="400">
    <Grid>
        <Label Content="Новое имя документа:" HorizontalAlignment="Left"
               VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="NewNameTextBox" HorizontalAlignment="Left"
                 VerticalAlignment="Top" Margin="10,40,10,0" Width="360"/>
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,80,0,0" Width="75" Click="OkButton_Click"/>
        <Button Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="95,80,0,0" Width="75" Click="CancelButton_Click"/>
    </Grid>
</Window>
