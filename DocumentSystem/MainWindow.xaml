<Window x:Class="DocumentSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management" Height="300" Width="400">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        
        <Label Content="Имя пользователя" HorizontalAlignment="Left"
               VerticalAlignment="Top" Margin="30,30,0,0"/>
        
        <TextBox Name="UserNameTextBox" HorizontalAlignment="Left"
                 VerticalAlignment="Top" Margin="150,30,0,0" Width="200"/>

        <Label Content="Пароль" HorizontalAlignment="Left"
               VerticalAlignment="Top" Margin="30,70,0,0"/>
        
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left"
                     VerticalAlignment="Top" Margin="150,70,0,0" Width="200"/>

        <Button Content="Войти" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="50,120,0,0" Width="100" Click="LoginButton_Click"/>
        
        <Button Content="Регистрация" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="200,120,0,0" Width="100" Click="RegisterButton_Click"/>
        
    </Grid>
</Window>
